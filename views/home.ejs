	</div>
</div> <!-- End of carousel -->

<div class="container">
	<div class="row">

		<!-- Start of agenda -->
		<div class="col-lg-6">
			<h2>Agenda</h2>
			<p class="lead">
				This agenda viewer will let you see multiple events cleanly!
			</p>
			<hr>

			<div class="agenda">
				<div class="table-responsive">
					<table class="table table-condensed table-bordered">
						<thead>
							<tr>
								<th>Date</th>
								<th>Time</th>
								<th>Event</th>
								<th>Done</th>
							</tr>
						</thead>
						<tbody>
							<!-- Single event in a single day -->

							<tr>
								<td class="agenda-date" class="active" rowspan="1">
									<div class="dayofmonth">21</div>
									<div class="dayofweek">Saturday</div>
									<div class="shortdate text-muted">July, 2019</div>
								</td>
								<td class="agenda-time">
									5:30 AM
								</td>
								<td class="agenda-events">
									<div class="agenda-event">
										<i class="glyphicon glyphicon-repeat text-muted" title="Repeating event"></i>Â 
										Setting up stage.
									</div>
								</td>
								<td>
									<input type="checkbox" name="">
								</td>
							</tr>

							<!-- Multiple events in a single day (note the rowspan) -->
							<tr>
								<td class="agenda-date" class="active" rowspan="3">
									<div class="dayofmonth">24</div>
									<div class="dayofweek">Thursday</div>
									<div class="shortdate text-muted">July, 2019</div>
								</td>
								<td class="agenda-time">
									8:00 - 9:00 AM 
								</td>
								<td class="agenda-events">
									<div class="agenda-event">
										Pick up dress.
									</div>
								</td>
								<td>
									<input type="checkbox" name="">
								</td>
							</tr>
							<tr>
								<td class="agenda-time">
									10:15 AM - 12:00 PM 
								</td>
								<td class="agenda-events">
									<div class="agenda-event">
										Pick up the flowers.
									</div>
								</td>
								<td>
									<input type="checkbox" name="">
								</td>
							</tr>
							<tr>
								<td class="agenda-time">
									7:00 - 9:00 PM
								</td>
								<td class="agenda-events">
									<div class="agenda-event">
										Setting the chocolate decorations.
									</div>
								</td>
								<td>
									<input type="checkbox" name="">
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<!-- End of agenda -->
	</div>
</div>
